<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niaz.dxball"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/dx_icon"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.niaz.dxball.LoadingScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.niaz.dxball.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niaz.dxball.About"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niaz.dxball.Score"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niaz.dxball.HighScore"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.niaz.dxball.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>